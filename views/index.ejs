<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/new">Create a new message</a>
    <ul>
      <% messages.forEach((msg, idx) => { %>
      <li>
        <strong><%= msg.user %></strong>: <%= msg.text %> <br />
        <small><%= msg.added.toLocaleString() %></small><br />
        <a href="/message/<%= idx %>">Open</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
